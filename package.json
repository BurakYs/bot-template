{
  "name": "bot-template",
  "version": "1.0.0",
  "description": "A template for creating Discord bots with Discord.js",
  "main": "dist/index",
  "author": "BurakYs",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node .",
    "dev": "tsc && cross-env NODE_ENV=development node .",
    "register-commands": "tsc && cross-env NODE_ENV=production node ./dist/registerCommands.js",
    "build": "tsc",
    "lint": "eslint"
  },
  "dependencies": {
    "discord.js": "^14.17.3",
    "dotenv": "^16.4.7",
    "glob": "^11.0.1",
    "i18next": "^24.2.2",
    "module-alias": "^2.2.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.13.1",
    "cross-env": "^7.0.3",
    "eslint": "~9.20.0",
    "typescript-eslint": "^8.23.0"
  },
  "_moduleAliases": {
    "@": "./dist"
  }
}
